generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

enum BOOK_CATEGORY {
  romantic
  scifi
  adventure
  novel
  medical
  story
  horror
  emotinal
  comedy
  action
  thriller
  educational
  general
}

model Book {
  id        String        @id @default(cuid())
  name      String        @unique
  author    String
  category  BOOK_CATEGORY
  User      User?         @relation(fields: [userId], references: [id])
  userId    String?
  isDeleted Boolean       @default(false)

  createdAt DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}
